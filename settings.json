{
    "window.commandCenter": 1,
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.external.osxExec": "iTerm.app",
    "terminal.integrated.profiles.osx": {
        "bash": {
            "path": "bash",
            "args": ["-l"],
            "icon": "terminal-bash"
        },
        "zsh": {
            "path": "zsh",
            "args": ["-l"]
        },
        "fish": {
            "path": "fish",
            "args": ["-l"]
        },
        "tmux": {
            "path": "tmux",
            "icon": "terminal-tmux"
        },
        "pwsh": {
            "path": "pwsh",
            "icon": "terminal-powershell"
        }
    },
    "application.shellEnvironmentResolutionTimeout": 90,
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
    "editor.fontFamily": "Berkeley Mono",
    "editor.fontSize": 14,
    "editor.fontLigatures": true,
    "editor.lineNumbers": "relative",
    "editor.cursorStyle": "block",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.minimap.enabled": false,
    "editor.rulers": [88, 120],
    "editor.suggestSelection": "first",
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.snippetSuggestions": "top",
    "files.trimTrailingWhitespace": true,
    "files.insertFinalNewline": true,

    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",

    "python.languageServer": "Pylance",
    "python.analysis.typeCheckingMode": "basic",
    "python.testing.pytestEnabled": true,
    "python.analysis.autoImportCompletions": true,

    "cursor.aipreview.enabled": true,
    "cursor.cmdk.ghostTextAtSymbols": true,
    "cursor.cmdk.useThemedDiffBackground": true,
    "cursor.general.enableShadowWorkspace": true,
    "cursor.cpp.enablePartialAccepts": true,

    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    "workbench.colorTheme": "Dracula Theme Soft",
    // "workbench.colorTheme": "Monokai Dimmed",
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "sqltools.useNodeRuntime": true,
    "workbench.activityBar.location": "bottom",
    "editor.renderWhitespace": "all",
    "terminal.integrated.env.osx": {},
    "cursor.chat.ghostTextAtSymbols": true,
    "cursor.chat.smoothStreaming": true,
    "breadcrumbs.enabled": false,
    "python.diagnostics.sourceMapsEnabled": true,
    "git.openRepositoryInParentFolders": "always",
    "cursor.chat.narrowScrollbar": false,
    "cursor.diffs.useCharacterLevelDiffs": true,
    "editor.accessibilitySupport": "off",
    "workbench.layoutControl.enabled": false,
    "window.commandCenter": false,
    "cursor.chat.showSuggestedFiles": true,
    "terminal.integrated.fontSize": 16,
    "makefile.configureOnOpen": true,
    "editor.renderControlCharacters": false,
    "cursor.chat.collapseInputBoxPills": true
}
