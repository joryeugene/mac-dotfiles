# Configuration Shortcuts
alias zshconfig='$EDITOR ~/.zshrc'
alias zshaliases='$EDITOR ~/.zsh_aliases'
alias zshfunctions='$EDITOR ~/.zsh_functions'
alias zc='zshconfig'
alias za='zshaliases'
alias zf='zshfunctions'
alias sourcezsh='source ~/.zshrc && echo "ZSH config reloaded!"'
alias sz='sourcezsh'

# System Operations
alias c='clear'
alias h='history'
alias j='jobs -l'
alias path='echo -e ${PATH//:/\\n}'
alias ports='lsof -i -P -n | grep LISTEN'
alias df='df -h'
alias du='du -h'

# Date and Time
alias now='date +"%T"'
alias nowdate='date +"%d-%m-%Y"'

# Network
alias myip='curl http://ipecho.net/plain; echo'
alias localip="ipconfig getifaddr en0"

# Development Tools
alias bi='brew install'
alias bci='brew install --cask'
alias ze='zellij'
alias lg='lazygit'
alias ld='lazydocker'
alias cat='bat'
alias grep='rg'
alias diff='delta'
alias ping='prettyping --nolegend'
alias preview="fzf --preview 'bat --color \"always\" {}'"

# Vim/Neovim
alias vim='nvim'
alias vi='nvim'
alias v='nvim'
alias nv='nvim'
alias nvf='nvim $(fzf)'
alias nvimconfig='$EDITOR ~/.config/nvim/init.lua'
alias vc='nvimconfig'

# Enhanced Navigation
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'
alias ~='cd ~'
alias cdp='cd -'

# List directory contents
alias la='ls -A'
alias ls='ls -GFh'
alias ll='ls -lAFh'
alias l='ls -CF'

# Git Enhanced
alias g='git'
alias ga='git add'
alias gaa='git add --all'
alias gb='git branch'
alias gba='git branch -a'
alias gbd='git branch -d'
alias gc='git commit -v'
alias gcm='git commit -m'
alias gco='git checkout'
alias gcb='git checkout -b'
alias gd='git diff'
alias gf='git fetch'
alias gl='git pull'
alias glog='git log --oneline --decorate --graph'
alias glogg="git log --graph --topo-order --pretty='%w(100,0,6)%C(yellow)%h%C(bold)%C(black)%d %C(cyan)%ar %C(green)%an%n%C(bold)%C(white)%s %N' --abbrev-commit"
alias gp='git push'
alias grb='git rebase'
alias gs='git status'
alias gst='git stash'
alias gstp='git stash pop'
alias gstc='git stash clear'

