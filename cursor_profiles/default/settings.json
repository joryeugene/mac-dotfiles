{
    "[jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    "application.shellEnvironmentResolutionTimeout": 90,
    "breadcrumbs.enabled": false,
    // cursor
    "cursor.aipreview.enabled": true,
    "cursor.cmdk.useThemedDiffBackground": true,
    "cursor.composer.collapsePaneInputBoxPills": true,
    "cursor.composer.renderPillsInsteadOfBlocks": true,
    "cursor.cpp.enablePartialAccepts": true,
    "cursor.diffs.useCharacterLevelDiffs": true,
    "cursor.general.enableShadowWorkspace": true,
    "cursor.terminal.usePreviewBox": true,
    // editor
    "editor.acceptSuggestionOnCommitCharacter": true,
    "editor.accessibilitySupport": "off",
    "editor.bracketPairColorization.enabled": true,
    "editor.cursorStyle": "block",
    "editor.fontFamily": "Berkeley Mono",
    "editor.fontLigatures": true,
    "editor.fontSize": 14,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.guides.bracketPairs": true,
    "editor.inlineSuggest.enabled": true,
    // "editor.lineNumbers": "relative",
    "editor.scrollBeyondLastLine": false,
    "editor.smoothScrolling": true,
    "editor.snippetSuggestions": "top",
    "editor.suggestSelection": "first",
    "editor.linkedEditing": true,
    "editor.minimap.enabled": false,
    "editor.renderControlCharacters": false,
    "editor.renderWhitespace": "all",
    "editor.rulers": [
        88,
        120
    ],
    "editor.stickyScroll.enabled": true,
    "editor.wordWrap": "off",
    // extensions
    "extensions.experimental.affinity": {
        "asvetliakov.vscode-neovim": 1
    },
    // files
    "files.insertFinalNewline": true,
    "files.trimTrailingWhitespace": true,
    // git
    "git.openRepositoryInParentFolders": "always",
    // python
    "python.diagnostics.sourceMapsEnabled": true,
    "python.languageServer": "Jedi",
    "python.testing.pytestEnabled": true,
    // search
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/*.code-search": true,
        "**/__pycache__": true
    },
    // terminal
    "terminal.external.osxExec": "WezTerm.app",
    "terminal.integrated.defaultProfile.osx": "zsh",
    "terminal.integrated.env.osx": {},
    "terminal.integrated.fontSize": 16,
    "terminal.integrated.profiles.osx": {
        "zsh": {
            "path": "zsh",
            "args": [
                "-l"
            ]
        }
    },
    "vscode-neovim.neovimExecutablePaths.darwin": "/opt/homebrew/bin/nvim",
    "vscode-neovim.neovimInitVimPaths.darwin": "~/.config/nvim/init.lua",
    "window.commandCenter": false,
    "workbench.activityBar.location": "bottom",
    "workbench.colorTheme": "Catppuccin Frapp√©",
    "workbench.colorCustomizations": {
        "editorGhostText.foreground": "#808080", // a medium gray for ghost text
        "editorGhostText.background": "#00000020" // a translucent dark background if needed
    },
    "workbench.layoutControl.enabled": false,
    "cursor.composer.cmdPFilePicker2": true,
    "cursor.general.gitGraphIndexing": "enabled",
    "repomix.output.style": "markdown",
    "repomix.output.filePath": "repomix-output.md",
    "repomix.output.parsableStyle": true,
    "repomix.output.includeEmptyDirectories": true,
    "repomix.ignore.customPatterns": [
        "**/*.svg"
    ],
    "explorer.confirmDragAndDrop": false,
}
